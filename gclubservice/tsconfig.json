{
    "compilerOptions": {
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "lib": [
        "esnext"
      ],
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "esnext",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "pretty": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": [
      "**/*.ts", "**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "examples",
      "test"
    ]
  }

  